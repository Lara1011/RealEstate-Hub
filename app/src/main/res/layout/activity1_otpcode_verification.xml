<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OTPCodeVerificationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/firstLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_back" />

                <TextView
                    android:id="@+id/pageNametextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="OTP Code Verification"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintBottom_toTopOf="@id/verify_btn"
        android:layout_marginBottom="6dp"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/center_layout"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Code has been send to +1 111 *****99"
            android:textColor="@color/black"
            android:textSize="16sp"
             />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:maxLength="1"
                android:background="@drawable/otp_background"
                android:gravity="center"
                android:hint=""
                android:textColor="@color/black"
                android:inputType="number"
                android:textStyle="bold"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:maxLength="1"
                android:layout_marginStart="20dp"
                android:background="@drawable/otp_background"
                android:gravity="center"
                android:inputType="number"
                android:hint=""
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:maxLength="1"
                android:background="@drawable/otp_background"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:hint=""
                android:inputType="number"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:maxLength="1"
                android:background="@drawable/otp_background"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:inputType="number"
                android:hint=""
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:text="Resend code in"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:text="53"
                android:textColor="@color/blue"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:text="s"
                android:textColor="@color/black"
                android:textSize="12sp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/verify_btn"
        android:background="@drawable/welcome_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:text="Verify"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>