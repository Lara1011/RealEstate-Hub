<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".logInActivity">

    <ImageView
        android:id="@+id/logoRoundedImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/logo_rounded" />

    <TextView
        android:id="@+id/logInTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoRoundedImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/lets_you_in"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />



    <EditText
        android:id="@+id/emailTextEmailAddress"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logInTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_for_text"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:padding="5dp" />


    <ImageView
        android:id="@+id/emailIconImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/emailTextEmailAddress"
        android:layout_alignTop="@+id/emailTextEmailAddress"
        android:layout_alignBottom="@+id/emailTextEmailAddress"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="340dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/email_icon" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailTextEmailAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_for_text"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="5dp" />
    <ImageView
        android:id="@+id/passwordIconImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/editTextTextPassword"
        android:layout_alignTop="@+id/editTextTextPassword"
        android:layout_alignBottom="@+id/editTextTextPassword"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="340dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/password_icon" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/welcome_button"
        android:fontFamily="@font/opensans_regular"
        android:padding="10dp"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/forgotPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/signInButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/forgot_password"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:background="@drawable/trasparent_button"
        android:textStyle="bold" />


</RelativeLayout>