<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".SetIntentActivity">

    <LinearLayout
        android:id="@+id/firstLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/icon_back" />

        <TextView
            android:id="@+id/pageNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/opensans_regular"
            android:text="Set Your Interest"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/makingDealImageView"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@+id/firstLinearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/making_deal" />

    <TextView
        android:id="@+id/purposeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/makingDealImageView"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:text="Please choose your purpose using Real Estate Hub"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/chooseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purposeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:text="You can choose multiple"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/sellerLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sellerLogoImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/seller_logo" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sellerSwitch"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_regular"
            android:text="Seller"

            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buyerLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sellerLinearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buyerLogoImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_buyer" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/buyerSwitch"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_regular"
            android:text="Buyer"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buyerLinearLayout"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/welcome_button"
        android:fontFamily="@font/opensans_regular"
        android:padding="10dp"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

</RelativeLayout>